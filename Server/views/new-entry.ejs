<% include header %>

<h2 style="color:rgb(18, 160, 196)">Add new movie.</h2>

<form method="post" role="form" style="color:rgb(18, 160, 196)">
	<div class="form-group">
		<label for="rank">Rank of movie</label>
		<input type="number" class="form-control" id="ranke" name="rank" placeholder="Enter rank of movie here" required>
	</div>
	<div class="form-group">
		<label for="name">Name of game.</label>
		<textarea class="form-control" id="name" name="name" placeholder="Add name of movie here" rows="1" required></textarea>
	</div>
	<div class="form-group">
		<input type="submit" value="Post Movie" class="btn btn-primary"> 
	</div>
</form>

<% include footer %>